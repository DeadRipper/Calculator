        <TextBox x:Name="MainText" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="310"/>
        <Button x:Name="button_clear" Content="c" HorizontalAlignment="Left" Margin="330,68,0,0" VerticalAlignment="Top" Width="75" Height="56" Click="Button_clear_Click"/>
        <TextBox x:Name="MainText_result" HorizontalAlignment="Left" Height="25" Margin="10,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="310"/>

    </Grid>
</Window>
