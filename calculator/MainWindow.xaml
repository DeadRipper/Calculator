        <Button x:Name="button8" Content="8" HorizontalAlignment="Left" Margin="90,194,0,0" VerticalAlignment="Top" Width="75" Height="60" Click="button8_Click"/>
        <Button x:Name="button9" Content="9" HorizontalAlignment="Left" Margin="170,194,0,0" VerticalAlignment="Top" Width="75" Height="60" Click="button9_Click"/>
